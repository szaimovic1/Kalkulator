<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import java.net.URL?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" fx:id="grid" maxWidth="Infinity">
    <stylesheets>
        <URL value="@digitron.css"/>
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label fx:id="finalExpression" text="0" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4"
           maxWidth="Infinity" maxHeight="Infinity"/>
    <Label fx:id="display" text="0" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="4"
           maxWidth="Infinity" maxHeight="Infinity"/>
    <Button text="\%" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operatorClicked"/>
    <Button text="/" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operatorClicked"/>
    <Button text="x" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operatorClicked"/>
    <Button text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operatorClicked"/>
    <Button text="7" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operandClicked"/>
    <Button text="8" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operandClicked"/>
    <Button text="9" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operandClicked"/>
    <Button text="4" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operandClicked"/>
    <Button text="5" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operandClicked"/>
    <Button text="6" GridPane.columnIndex="2" GridPane.rowIndex="4" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operandClicked"/>
    <Button text="+" GridPane.columnIndex="3" GridPane.rowIndex="3" GridPane.rowSpan="2" styleClass="buttonStyle"
            maxWidth="Infinity" maxHeight="Infinity" onAction="#operatorClicked"/>
    <Button text="1" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operandClicked"/>
    <Button text="2" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operandClicked"/>
    <Button text="3" GridPane.columnIndex="2" GridPane.rowIndex="5" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operandClicked"/>
    <Button text="0" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" styleClass="buttonStyle"
            maxWidth="Infinity" maxHeight="Infinity" onAction="#operandClicked"/>
    <Button text="." GridPane.columnIndex="2" GridPane.rowIndex="6" styleClass="buttonStyle" maxWidth="Infinity"
            maxHeight="Infinity" onAction="#operandClicked"/>
    <Button text="=" GridPane.columnIndex="3" GridPane.rowIndex="5" GridPane.rowSpan="2" styleClass="equalsBtn"
            maxWidth="Infinity" maxHeight="Infinity" onAction="#operatorClicked"/>
</GridPane>